<h1>Chatroom for Group # <%= @chatroom.id  %></h1>
<ul>
  <h2>Users</h2>
  <% @chatroom.group.users.each do |user| %>
    <li>
      <%= user.name %>
    </li>
  <% end %>
</ul>
<div class="row col-md-8 col-md-offset-2">
<h1>Group #<%= @chatroom.group.id %></h1>

<div class="panel panel-default">
  <% if @chatroom.messages.any? %>
    <div class="panel-body" id="messages" data-chatroom=<%=@chatroom.id%>>
      <%= render partial: 'message', collection: @chatroom.messages%>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages" data-chatroom=<%=@chatroom.id%>>
    </div>
  <%end%>
</div>


  <%= render partial: 'message_form', locals: {message: @message, chatroom: @chatroom}%>
</div>
