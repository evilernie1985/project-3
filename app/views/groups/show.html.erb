  <div class="row">
      <div class="col s5">
        <div class="section flow-text">
          <h4><%= "Group #{@group.id}" %>: <%= "#{@group.deal.restaurant.name} deal for #{@group.deal.pax}"%> </h4>
          <h4></h4>

          <h6><strong><%= "#{@group.deal.name}" %></strong></h4>
        </div>

        <div class="divider"></div>
        <div class="section">
          <h6><strong>Deal Description</strong></h6>
          <h6><%= "#{@group.deal.description}" %></h6>
        </div>

        <div class="divider"></div>

        <div class="section">
        <h6><strong>Meetup Details</strong></h6>
        <h6><%= "Meeting On: #{@group.date}" %></h6>
        <h6><%= "Meeting At: #{@group.time}" %></h6>
        </div>

        <div class="divider">

        </div>
        <div class="section">
          <h6><strong>Attendees:</strong></h6>
          <ul>
            <% @group.users.each do |user| %>
            <li>
              <%= user.name %>
            </li>
            <% end %>
          </ul>
        </div>

        <div class="divider"></div>

      <div class="section">

            <% if @group.users.first %>
              <h6><%= "Created by #{@group.users.first.name} on #{@group.created_at.getlocal}" %>
              </h6>

            <% else %>

            <% end %>


      </div>


      <!-- Show flash error -->
      <% if flash[:join_error] %>
        <div class="notice"><%= flash[:join_error] %></div>
      <% end %>

      <% if flash[:max_error] %>
        <div class="notice"><%= flash[:max_error] %></div>
      <% end %>

      <!-- join button, patch request -->
      <% if @group.users.include? current_user %>
      <%= link_to "Leave Group", group_path, method: :delete %>
      <%= render partial: 'show_chat', locals: {chatroom: @chatroom}%>
      <% else %>
        <!-- Leave button -->
       <%= link_to "Join Group", group_path, method: :patch %>
      <% end %>

      <!-- button to go back to all groups -->
      <%= link_to "Back to Deal", deal_path(@group.deal) %>

      <br></br>

    </div>

  </div>

    </div>
  </div>
</div>
