<h1 class='title'><%= @restaurant.name %>: <%= @deal.name %> </h1> <br>

<h2 class='subtitle'><%= @deal.description %></h2> <br>

<br>

<div class="columns">
  <div class="column is-one-third"></div>
  <div class="column">
    <table>
      <tr>
        <th>Group Name</th>
        <th>Users</th>
        <th>Date</th>
        <th>Time</th>
      </tr>
      <% @groups.each do |group|%>
        <% if group.date >= Date.today %>
        <tr>
          <td><%= group.id %></td>
          <td><%= group.users.count %>/<%= @deal.pax %></td>
          <td><%= group.date %></td>
          <td><%= group.time %></td>
          <td id="dealsViewGroup"><%= link_to 'View Group', group_path(group) %></td>
        </tr>
      <% end %>
    <% end %>
    </table>

    <%= link_to 'Create Group', new_deal_group_path(@deal) %>
    <%= link_to 'Back', restaurants_main_path %>
  </div>
  <div class="column"></div>
</div>
