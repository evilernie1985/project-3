<h1><%= @restaurant.name %>: <%= @deal.name %> </h1> <br>

<p><%= @deal.description %></p> <br>

<%= link_to 'Create New Group', new_deal_group_path(@deal) %>

<br>

<table>
  <tr>
    <th>Group Name</th>
    <th>Users</th>
    <th>Date</th>
    <th>Time</th>
  </tr>
  <% @groups.each do |group|%>
    <% if group.date >= Date.today %>
    <tr>
      <td><%= group.id %></td>
      <td><%= group.users.count %>/<%= @deal.pax %></td>
      <td><%= group.date %></td>
      <td><%= group.time %></td>
      <td><%= link_to 'View Group', group_path(group) %></td>
    </tr>
  <% end %>
<% end %>
</table>

<%= link_to 'Back', restaurants_main_path %>
